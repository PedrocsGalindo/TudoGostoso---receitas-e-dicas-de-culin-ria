<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="grid" alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml"
    fx:controller="TelaCadastroController">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25" />
    </padding>

    <Label text="Usuário:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="campoUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="campoEmail" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Senha:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <PasswordField fx:id="campoSenha" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <!-- Botões para escolher o tipo de usuário -->
    <Button text="Usuário Padrão" onAction="#selecionarUsuarioPadrao" GridPane.rowIndex="3"
        GridPane.columnIndex="0" />
    <Button text="Usuário Chef" onAction="#selecionarUsuarioChef" GridPane.rowIndex="3"
        GridPane.columnIndex="1" />

    <!-- Botão de Cadastro -->
    <Button text="Cadastrar" onAction="#cadastrarUsuario" GridPane.rowIndex="4"
        GridPane.columnIndex="1" />

    <!-- Botão para voltar à tela de login -->
    <Button text="Voltar" onAction="#voltarParaLogin" GridPane.rowIndex="5" GridPane.columnIndex="0" />
</GridPane>
